@inject IStringLocalizer<AppbarNavigation> Localizer

<FeatureNavigationMenu FeatureRoute="@Routes.MilestonesOverview" MenuTitle="@Localizer["Milstenar"]" Match="NavLinkMatch.Prefix" MenuLinks="menuLinks"/>


@code {
    List<FeatureNavigationMenu.MenuLink> menuLinks = new();

    protected override void OnInitialized()
    {
        menuLinks = new()
        {
            new FeatureNavigationMenu.MenuLink(Localizer["Översikt"], Routes.MilestonesOverview, null, NavLinkMatch.All),
            new FeatureNavigationMenu.MenuLink(Localizer["Nytt"], Routes.MilestoneNew, Icons.Material.Sharp.Add, NavLinkMatch.All),
        };
    }
}
