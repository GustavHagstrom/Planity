@using Planity.FrontendBlazorWASM.Shared.Models
@using MudBlazor

<EntityForm TModel="Milestone" Model="milestone" OnValidSubmit="HandleValidSubmit" SaveButtonText="Spara">
    <MudTextField T="string" @bind-Value="milestone.Name" Label="Namn" For="() => milestone.Name" Required="true" />
    <MudTextField T="string" @bind-Value="milestone.Description" Label="Beskrivning" For="() => milestone.Description" />
    <MudDatePicker @bind-Date="milestone.Date" Label="Datum" />
    <MudCheckBox T="bool" @bind-Value="milestone.IsCompleted" Color="Color.Primary" Label="Klar" />
</EntityForm>

@code {
    [Parameter] public Milestone? MilestoneModel { get; set; }
    [Parameter] public EventCallback<Milestone> OnSaved { get; set; }

    private Milestone milestone = new()
    {
        Date = null
    };
    private bool isNew => MilestoneModel is null;

    protected override void OnParametersSet()
    {
        if (MilestoneModel != null)
        {
            milestone = new Milestone
            {
                Id = MilestoneModel.Id,
                Name = MilestoneModel.Name,
                Description = MilestoneModel.Description,
                Date = MilestoneModel.Date,
                IsCompleted = MilestoneModel.IsCompleted,
                OrganizationId = MilestoneModel.OrganizationId,
                ProjectId = MilestoneModel.ProjectId
            };
        }
    }

    private async Task HandleValidSubmit()
    {
        await OnSaved.InvokeAsync(milestone);
    }
}
