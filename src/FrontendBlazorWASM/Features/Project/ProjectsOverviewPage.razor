@page "/projects"
@using Planity.FrontendBlazorWASM.Shared.Models
@inject NavigationManager NavigationManager

<MudPaper Class="pa-4">
    <MudText Typo="Typo.h5">Projektöversikt</MudText>

    <MudButton Color="Color.Primary" OnClick="@(() => NavigationManager.NavigateTo("/projects/new"))" StartIcon="@Icons.Material.Filled.Add">
        Skapa nytt projekt
    </MudButton>

    <MudTable Items="@Projects" Hover="true">
        <HeaderContent>
            <MudTh>Namn</MudTh>
            <MudTh>Status</MudTh>
            <MudTh>Start</MudTh>
            <MudTh>Slut</MudTh>
            <MudTh></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd>@context.Name</MudTd>
            <MudTd>@context.Status</MudTd>
            <MudTd>@context.Start?.ToShortDateString()</MudTd>
            <MudTd>@context.End?.ToShortDateString()</MudTd>
            <MudTd>
                <MudIconButton Icon="@Icons.Material.Filled.Visibility" Color="Color.Primary"
                               OnClick="@(() => NavigationManager.NavigateTo($"/projects/{context.Id}"))" />
            </MudTd>
        </RowTemplate>
    </MudTable>
</MudPaper>

@code {
    private List<Project> Projects = new()
    {
        new Project { Id = Guid.NewGuid().ToString(), Name = "Villa Ängsviken", Status = ProjectStatus.NotStarted },
        new Project { Id = Guid.NewGuid().ToString(), Name = "Parhus Björkbacken", Status = ProjectStatus.InProgress }
    };
}
