@page "/projects/new"
@using Planity.FrontendBlazorWASM.Shared.Models
@inject NavigationManager NavigationManager
@inject IProjectService ProjectService
@inject IStringLocalizer<ProjectNewPage> localizer

<EntityFormsPageLayout Title="@localizer["Nytt projekt"]" OnSave="Save">
    <MainContent>
        <ProjectForm ProjectModel="Project" />
    </MainContent>
</EntityFormsPageLayout>



@code {
    private Project Project = new();

    private async Task Save()
    {
        await ProjectService.CreateProjectAsync(Project);
        NavigationManager.NavigateTo("/projects");
    }
}