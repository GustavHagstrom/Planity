@inject IStringLocalizer<ProjectForm> Localizer
<MudTextField T="string" @bind-Value="project.Name" Label="@Localizer["Projektnamn"]" For="() => project.Name" Required="true" />
<MudTextField T="string" @bind-Value="project.Description" Label="@Localizer["Beskrivning"]" For="() => project.Description" />

@code {
    [Parameter] public Project? ProjectModel { get; set; }

    private Project project = new();

    protected override void OnParametersSet()
    {
        if (ProjectModel != null)
        {
            project = new Project
            {
                Id = ProjectModel.Id,
                Name = ProjectModel.Name,
                Description = ProjectModel.Description,
                Tasks = ProjectModel.Tasks,
                Milestones = ProjectModel.Milestones,
                IsExpanded = ProjectModel.IsExpanded
            };
        }
    }
}
