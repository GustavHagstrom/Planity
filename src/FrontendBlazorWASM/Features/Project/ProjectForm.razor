@inject IStringLocalizer<ProjectForm> Localizer

<MudGrid Spacing="2">
    <MudItem xs="12" sm="3" lg="3">
        <MudTextField T="string" Variant="Variant.Outlined" Margin="Margin.Dense" @bind-Value="project.Name" Label="@Localizer["Projektnamn"]" For="() => project.Name" Required="true" />
    </MudItem>
    <MudItem xs="12" sm="9" lg="9">
        <MudTextField T="string" Variant="Variant.Outlined" Margin="Margin.Dense" @bind-Value="project.Description" Label="@Localizer["Beskrivning"]" For="() => project.Description" />
    </MudItem>
</MudGrid>


@code {
    [Parameter] public Project? ProjectModel { get; set; }

    private Project project = new();

    protected override void OnParametersSet()
    {
        if (ProjectModel != null)
        {
            project = new Project
            {
                Id = ProjectModel.Id,
                Name = ProjectModel.Name,
                Description = ProjectModel.Description,
                Tasks = ProjectModel.Tasks,
                Milestones = ProjectModel.Milestones,
                IsExpanded = ProjectModel.IsExpanded
            };
        }
    }
}
