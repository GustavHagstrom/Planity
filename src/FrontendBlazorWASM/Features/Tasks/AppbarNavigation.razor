@inject IStringLocalizer<AppbarNavigation> Localizer

<FeatureNavigationMenu FeatureRoute="@Routes.TasksOverview" MenuTitle="@Localizer["Uppgifter"]" Match="NavLinkMatch.Prefix" MenuLinks="menuLinks"/>


@code {
    List<FeatureNavigationMenu.MenuLink> menuLinks = new();

    protected override void OnInitialized()
    {
        menuLinks = new()
        {
            new FeatureNavigationMenu.MenuLink(Localizer["Översikt"], Routes.TasksOverview, null, NavLinkMatch.All),
            new FeatureNavigationMenu.MenuLink(Localizer["Nytt"], Routes.TaskNew, Icons.Material.Sharp.Add, NavLinkMatch.All),
        };
    }
}
