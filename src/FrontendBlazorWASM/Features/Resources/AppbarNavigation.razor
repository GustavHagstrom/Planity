@inject IStringLocalizer<AppbarNavigation> Localizer

<FeatureNavigationMenu FeatureRoute="@Routes.ResourcesOverview" MenuTitle="@Localizer["Resurser"]" Match="NavLinkMatch.Prefix" MenuLinks="menuLinks" />


@code {
    List<FeatureNavigationMenu.MenuLink> menuLinks = new();

    protected override void OnInitialized()
    {
        menuLinks = new()
        {
            new FeatureNavigationMenu.MenuLink(Localizer["Översikt"], Routes.ResourcesOverview, null, NavLinkMatch.All),
            new FeatureNavigationMenu.MenuLink(Localizer["Nytt"], Routes.ResourceNew, Icons.Material.Sharp.Add, NavLinkMatch.All),
        };
    }
}
