@page "/resources/new"
@inject NavigationManager Navigation
@inject IResourceService ResourceService
@inject IStringLocalizer<ResourceNew> localizer
@inject NavigationManager Navigation

<EntityFormsPageLayout Title="@localizer["Ny resurs"]"  OnSave="Save">
    <MainContent>
        <ResourceForm Resource="resource" />
    </MainContent>
</EntityFormsPageLayout>


@code {
    private Resource resource = new();
    private async Task Save()
    {
        await ResourceService.CreateAsync(resource);
        Navigation.NavigateTo(Routes.ResourceDetails(resource.Id));
    }
}
