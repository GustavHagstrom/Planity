<MudMenu>
    <ActivatorContent>
        <NavigationText Href="@FeatureRoute" Match="@Match">@MenuTitle</NavigationText>
    </ActivatorContent>
    <ChildContent>
        @foreach (var link in MenuLinks)
        {
            <MudMenuItem Href="@link.Route">
                <NavigationText Href="@link.Route" Match="link.Match">
                    @link.Title
                </NavigationText>
            </MudMenuItem>
        }
    </ChildContent>
</MudMenu>

@code {
    public record MenuLink(string Title, string Route, NavLinkMatch Match);
    [Parameter] public string? MenuTitle { get; set; } 
    [Parameter] public string? FeatureRoute { get; set; }
    [Parameter] public List<MenuLink> MenuLinks { get; set; } = [];
    [Parameter] public NavLinkMatch Match { get; set; } = NavLinkMatch.Prefix;
}
