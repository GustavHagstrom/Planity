@using System.Globalization

<polyline points="@Points" stroke="@StrokeColor" stroke-width="@StrokeWidth" marker-end="@MarkerEnd" style="pointer-events:none;fill:none;" />

@code {
    [Parameter] public Connection Connection { get; set; }

    string Points => $"{Connection.Start.X},{Connection.Start.Y} {Connection.End.X},{Connection.Start.Y} {Connection.End.X},{Connection.End.Y}";
    string StrokeColor { get; set; } = "#3a6ea5";
    double StrokeWidth { get; set; } = 2;
    string MarkerEnd { get; set; } = "url(#arrowhead)";
}
