@inherits StyleComponent

<PlanityToolbar LeftActions="@LeftActions" MiddleActions="@MiddleActions" RightActions="@RightActions" Title="@Title"/>
<div class="@_class" style="@Style">
    @ChildContent
</div>

@code {
    [Parameter] public string? Title { get; set; }
    [Parameter] public RenderFragment? LeftActions { get; set; }
    [Parameter] public RenderFragment? MiddleActions { get; set; }
    [Parameter] public RenderFragment? RightActions { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }

    string _class => $"pa-4 {Class}";
}
